{
  "tasks": {
    "build": {
      "name": "build",
      "description": "Full release build",
      "steps": [
        {
          "spawn": "pre-compile"
        },
        {
          "spawn": "compile"
        },
        {
          "spawn": "post-compile"
        },
        {
          "spawn": "test"
        },
        {
          "spawn": "package"
        }
      ]
    },
    "compile": {
      "name": "compile",
      "description": "Only compile"
    },
    "default": {
      "name": "default",
      "description": "Synthesize project files",
      "steps": [
        {
          "exec": "npx projen default",
          "cwd": "../.."
        }
      ]
    },
    "package": {
      "name": "package",
      "description": "Creates the distribution package"
    },
    "post-compile": {
      "name": "post-compile",
      "description": "Runs after successful compilation"
    },
    "pre-compile": {
      "name": "pre-compile",
      "description": "Prepare the project for compilation"
    },
    "sops-decrypt": {
      "name": "sops-decrypt",
      "description": "Decrypt secrets",
      "env": {
        "AGE_PUBLIC_KEY": "$(. secrets/.env-sops && echo $AGE_PUBLIC_KEY)"
      },
      "steps": [
        {
          "exec": ". secrets/.env-sops"
        },
        {
          "exec": "secrets/sops --decrypt --age $AGE_PUBLIC_KEY ./secrets/sops.yaml"
        }
      ]
    },
    "sops-edit": {
      "name": "sops-edit",
      "description": "Edit secrets",
      "steps": [
        {
          "exec": "secrets/sops ./secrets/sops.yaml"
        }
      ]
    },
    "sops-encrypt": {
      "name": "sops-encrypt",
      "description": "Encrypt secrets",
      "env": {
        "AGE_PUBLIC_KEY": "$(. secrets/.env-sops && echo $AGE_PUBLIC_KEY)"
      },
      "steps": [
        {
          "exec": ". secrets/.env-sops"
        },
        {
          "exec": "secrets/sops --encrypt --age $AGE_PUBLIC_KEY  -i ./secrets/sops.yaml"
        }
      ]
    },
    "sops-install": {
      "name": "sops-install",
      "description": "Install sops version 3.8.1",
      "steps": [
        {
          "exec": "curl -LO https://github.com/getsops/sops/releases/download/v3.8.1/sops-v3.8.1.linux.amd64"
        },
        {
          "exec": "mv sops-v3.8.1.linux.amd64 ./secrets/sops"
        },
        {
          "exec": "chmod +x ./secrets/sops"
        },
        {
          "exec": "secrets/sops --version"
        }
      ]
    },
    "test": {
      "name": "test",
      "description": "Run tests"
    }
  },
  "//": "~~ Generated by projen. To modify, edit .projenrc.js and run \"npx projen\"."
}
